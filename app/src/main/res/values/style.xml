        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="BtnNormalDark" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_corners_50</item>
        <item name="backgroundTint">@color/green_dark</item>
        <item name="android:layout_height">48dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="BtnNormalBase" parent="Widget.AppCompat.Button">
