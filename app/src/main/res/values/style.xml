<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Definición de un color -->
    <color name="colorPrimary">#3F51B5</color>
    <color name="colorPrimaryDark">#303F9F</color>
    <color name="colorAccent">#FF4081</color>

    <!-- Definición de un estilo de texto -->
    <style name="MiTextoEstilo">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BtnBigDark" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_corners_10</item>
        <item name="backgroundTint">@color/green_dark</item>
        <item name="android:layout_height">65dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="BtnBigBase" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_corners_10</item>
        <item name="backgroundTint">@color/green_base</item>
