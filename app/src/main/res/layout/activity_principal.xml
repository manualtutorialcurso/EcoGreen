<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/headerapp"
    tools:context=".PrincipalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginTop="0dp" >
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="23dp"
            android:text="Bienvenido"
            android:layout_marginBottom="50dp" />
        <Button
            android:id="@+id/btnFarm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:backgroundTint="@color/green_dark"
            android:text="@string/text_farm" />
        <Button
            android:id="@+id/btnCategory"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:backgroundTint="@color/green_dark"
            android:text="@string/text_category"/>
        <Button
            android:id="@+id/btnStatitics"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:backgroundTint="@color/green_dark"
            android:text="@string/text_statistics" />
        <Button
            android:id="@+id/btnAdvice"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:backgroundTint="@color/green_dark"
            android:text="@string/text_advice"/>
        <Button
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:backgroundTint="@color/green_dark"
            android:text="@string/text_settings" />

