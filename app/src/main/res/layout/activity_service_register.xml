<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/headerapp"
    tools:context=".ServiceRegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/regPlantTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:layout_margin="5sp"
            android:text="Categorias"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp" />


        <Button
            android:id="@+id/btnWater"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/green_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Agua" />

        <Button
            android:id="@+id/btnElectric"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/green_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="ElÃ©ctricidad" />

        <Button
            android:id="@+id/btnManure"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/green_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Fertilizante" />

        <Button
            android:id="@+id/btnReturn"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/green_dark"
            app:icon="@android:drawable/ic_menu_revert" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
