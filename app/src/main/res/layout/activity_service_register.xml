<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/headerapp"
    tools:context=".ServiceRegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:layout_marginTop="0dp" >
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="23dp"
            android:text="@string/text_category" />
        <Button
            android:id="@+id/btnWater"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/green_dark"
            android:textSize="18sp"
            android:textStyle="normal"
            android:text="@string/menubtn_water" />
        <Button
            android:id="@+id/btnElectric"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/green_dark"
            android:textSize="18sp"
            android:textStyle="normal"
            android:text="@string/menubtn_energy" />
        <Button
            android:id="@+id/btnManure"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/green_dark"
            android:textSize="18sp"
            android:textStyle="normal"
            android:text="@string/menubtn_manure" />

        <Button
            android:id="@+id/btnReturn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/green_light"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="@color/green_dark"
            android:text="@string/btn_return" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
