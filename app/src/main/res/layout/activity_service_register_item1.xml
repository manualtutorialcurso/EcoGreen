<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/headerapp"
    tools:context=".ServiceRegisterItem1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:layout_marginTop="0dp" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="23dp"
            android:text="@string/menubtn_water" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="80dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:paddingEnd="15sp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="Volumen" />

                <EditText
                    android:id="@+id/editTextVolumen"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@color/green_light"
                    android:inputType="textPersonName"
                    android:hint="m³ mensuales" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:paddingEnd="15sp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="Precio" />

                <EditText
                    android:id="@+id/editTextPrecioA"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@color/green_light"
                    android:inputType="number"
                    android:hint="Ingrese el valor del m³" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:paddingEnd="15sp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="Mes" />

                <EditText
                    android:id="@+id/editTextMesA"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@color/green_light"
                    android:inputType="textPersonName"
                    android:hint="Ingrese el mes" />
            </LinearLayout>

            <Button
                android:id="@+id/btnRegistrarAgua"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="60dp"
                android:backgroundTint="#195A37"
                android:textSize="18sp"
                android:textStyle="normal"
                android:text="Registrar" />

            <Button
                android:id="@+id/btnReturn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/green_light"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="@color/green_dark"
                android:text="@string/btn_return" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>