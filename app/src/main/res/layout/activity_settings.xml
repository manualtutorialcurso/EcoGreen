<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/headerapp"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="95dp"
        android:paddingRight="95dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/regPlantTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configuraciones"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/regPlantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Datos del Huerto"
            android:textAlignment="center"
            android:textColor="#2B7640"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/labelSettingsArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Área Total de mi huerto (m)"
            android:textAlignment="center"
            android:textSize="12sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="true"  >

            <EditText
                android:id="@+id/edittext_1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="00"
                android:inputType="number"
                android:textAlignment="center"
                android:background="#EEEEEE"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="X"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="normal"/>

            <EditText
                android:id="@+id/edittext_3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="00"
                android:inputType="number"
                android:textAlignment="center"
                android:background="#EEEEEE"/>

        </LinearLayout>

        <!--TextView
            android:id="@+id/labelSettingsWaterType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Método de Riego"
            android:textAlignment="center"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/inputSettingsWaterType"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:textAlignment="center"
            android:text="Manual                       ▼"
            android:textSize="16sp"
            android:background="#f6f6f6" /-->


        <TextView
            android:id="@+id/labelSettingsWaterPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Valor m3 de agua "
            android:textAlignment="center"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/inputSettingsWaterPrice"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="16sp"
            android:background="#f6f6f6" />

        <TextView
            android:id="@+id/labelSettingsLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Método de iluminación"
            android:textAlignment="center"
            android:textSize="12sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />

        <EditText
            android:id="@+id/inputSettingsLight"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:textAlignment="center"
            android:text="Natural                      ▼"
            android:textSize="16sp"
            android:background="#f6f6f6"
            />

        <TextView
            android:id="@+id/labelSettingsLightPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valor kWh de energia"
            android:textAlignment="center"
            android:textSize="12sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />

        <EditText
            android:id="@+id/inputSettingsLightPrice"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:textAlignment="center"
            android:text=""
            android:textSize="16sp"
            android:background="#f6f6f6"
            />

        <!--TextView
            android:id="@+id/labeSettingsTypeManure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de fertilizante"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/inputSettingsManure"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text="Compost                      ▼"
            android:inputType="text"
            android:background="#f6f6f6"/-->


        <TextView
            android:id="@+id/labeSettingsManure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Costo de fertilizante (kg)"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/inputSettingsManureCost"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text=""
            android:inputType="text"
            android:background="#f6f6f6"/>

        <Button
            android:id="@+id/btnRecRegister"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#96C78A"
            android:text="Guardar Datos"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="630dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnReturn"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                app:icon="@android:drawable/ic_menu_revert" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>