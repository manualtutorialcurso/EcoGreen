<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/headerapp"
    tools:context=".TipsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="consejos"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp" />


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            app:srcCompat="@drawable/ic_launcher_background" />

        <Button
            android:id="@+id/btnMainFarm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="50dp"
            android:text="Mi primer huerto"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="#96C78A"/>

        <Button
            android:id="@+id/btnMainStatitics"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:text="Tipo de suelos"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="#96C78A" />

        <Button
            android:id="@+id/btnMainTips"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:text="Compost y vermicompost"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="#96C78A" />
        <Button
            android:id="@+id/btnTips04"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:text="Remedios"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="#96C78A" />
        <Button
            android:id="@+id/btnTips05"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:text="Plagas y enfermedades"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="#96C78A" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

